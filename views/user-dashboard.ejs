  <meta name="viewport" content="width=\, initial-scale=1.0">
  <title>Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@100;300;400;600&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="./css/style.css">
</head>

<body>
  <div class="dashboard">
    <nav class="my-navbar bg-primary">
      <div class="my-navbar-brand">
        <a href="/"><h2 class="text-light">ATG Social App</h2></a>
      </div>
      <form action="/logout" method="post">
        <button type="submit" class="btn btn-light">Log Out</button>
      </form>
    </nav>
  </div>

  <div class="user-dashboard">

    <div class="user-card card ms-5 mt-5" style="width:400px">
      <img class="card-img-top" src="https://www.w3schools.com/bootstrap5/img_avatar1.png" alt="Card image">
      <div class="card-body">
        <h4 class="card-title"><%= username %></h4>
        <p class="card-text"><%= name %></p>
        <a href="#" class="btn btn-primary">See Profile</a>
      </div>
    </div>

    <div class="create-post mt-5">
      <form class="w-75" action="/" method="post">
        <div class="mb-3">
          <h1 class="text-primary mb-2">Create Post</h1>
          <input type="text" name="_user" hidden value=<%= username %>>
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title">
        </div>
        <div class="mb-3">
          <label for="desc" class="form-label">Description</label>
          <textarea class="form-control" id="desc" name="desc" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mb-5">Post</button>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
    crossorigin="anonymous"></script>
</body>

